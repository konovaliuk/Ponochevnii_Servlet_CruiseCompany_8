<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
   http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">

      <filter>
        <filter-name>FormEncodingFilter</filter-name>
        <filter-class>ua.epam.poject.cruise.filter.FormEncodingFilter</filter-class>
          <init-param>
              <param-name>encoding</param-name>
              <param-value>UTF-8</param-value>
          </init-param>
      </filter>
      <filter-mapping>
        <filter-name>FormEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
      </filter-mapping>

<!--    <welcome-file-list>-->
<!--        <welcome-file>/index.jsp</welcome-file>-->
<!--    </welcome-file-list>-->

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>ua.epam.poject.cruise.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Controller2</servlet-name>
        <servlet-class>ua.epam.poject.cruise.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller2</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>register</servlet-name>
        <jsp-file>/WEB-INF/jsp/registration.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>signin</servlet-name>
        <jsp-file>/WEB-INF/jsp/login.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>signin</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>error</servlet-name>
        <jsp-file>/WEB-INF/jsp/error/error.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>error</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>



    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error/error.jsp</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.RuntimeException</exception-type>
        <location>/WEB-INF/jsp/error/error.jsp</location>
    </error-page>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/mypool</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!--    <error-page>-->
    <!--        <error-code>500</error-code>-->
    <!--        <location>/WEB-INF/view/error500.jsp</location>-->
    <!--    </error-page>-->


</web-app>
